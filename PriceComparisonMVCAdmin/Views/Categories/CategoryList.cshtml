@model List<PriceComparisonMVCAdmin.Models.Categories.CategiryListModel>


<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MarketMap</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/product-list-style.css" />
</head>

<main class="container-fluid p-3 mb-3 border">
    <div class="row">
        <!-- Лівий блок -->
        <aside class="col-md-3">
            <h2>Лівий блок</h2>
            <ul class="list-group">
                @foreach (var categoryList in Model)
                {
                    <li class="list-group-item">@categoryList.ParentCategory.Title</li>
                }
            </ul>
        </aside>

        <!-- Правий блок -->
        <section class="col-md-9">
            @foreach (var categoryList in Model)
            {
        
                <!--контейнер категорії -->
                <div class="mb-4">
                    <h4>
                        <a href="@Url.Action("CategoryProductList", "Categories", new { id = categoryList.ParentCategory.Id })">
                            @categoryList.ParentCategory.Title
                        </a>
                    </h4>
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">
                        <!--карточка продукту -->
                    @foreach (var product in categoryList.ProductToCategiries){
                            <div class="col">
                                <div class="card h-100">
                                    <img src="@Url.Content(product.ImageUrl)" class="card-img-top" alt="Category Image">
                                    <div class="card-body d-flex align-items-center justify-content-center">
                                        <a href="@Url.Action("Index", "Product", new { id = product.Id })" class="card-text mb-0">
                                            @product.Title
                                        </a>
                                    </div>
                                </div>
                            </div>
                    }
                    </div>
                </div>
            }
        </section>

    </div>
</main>


