@model CategoryCreateRequestModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var parents = ViewBag.Parents as List<CategoryResponseModel>;
    ViewData["Title"] = "Категорії - Створення";
}

<h2>Створення категорії</h2>
<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label asp-for="Title" class="col-sm-3 col-form-label fw-bold">Назва категорії</label>
                <div class="col-sm-9">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Image" class="col-sm-3 col-form-label fw-bold">Зображення</label>
                <div class="col-sm-9">
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Icon" class="col-sm-3 col-form-label fw-bold">Іконка</label>
                <div class="col-sm-9">
                    <input asp-for="Icon" type="file" class="form-control" />
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ParentCategoryId" class="col-sm-3 col-form-label fw-bold">Батьківська категорія</label>
                <div class="col-sm-9">
                    <select asp-for="ParentCategoryId" class="form-select">
                        <option value="">-- Немає --</option>
                        @foreach (var item in parents)
                        {
                            <option value="@item.Id" selected="@(Model.ParentCategoryId == item.Id)">
                                @item.Title
                            </option>
                        }
                    </select>

                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="DisplayOrder" class="col-sm-3 col-form-label fw-bold">Порядок відображення</label>
                <div class="col-sm-9">
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-center">
                <button type="submit" class="btn btn-primary btn-main px-4">Створити</button>
            </div>
        </form>
    </div>
</div>
