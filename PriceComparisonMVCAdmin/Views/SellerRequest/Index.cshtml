@model List<SellerRequestResponseModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container my-4">
    <h2 class="mb-3">Заявки продавців</h2>

    @if (Model.Any())
    {
        <div class="row fw-bold py-2">
            <div class="col-2">Назва</div>
            <div class="col-3">Вебсайт</div>
            <div class="col-3">Статус</div>
            <div class="col-2">Дата подачі</div>
            <div class="col-2">Дії</div>
        </div>
        <ul class="list-group">
            @foreach (var seller in Model)
            {
                <li class="list-group-item">
                    <div class="row align-items-center py-2">
                        <div class="col-2">
                            <strong>@seller.StoreName</strong>
                        </div>
                        <div class="col-3 text-truncate" title="@seller.WebsiteUrl" style="max-width: 100%;">
                            <a href="@seller.WebsiteUrl" target="_blank">@seller.WebsiteUrl</a>
                        </div>
                        <div class="col-3">
                            <span class="badge @(seller.IsProcessed ? "bg-success" : "bg-warning text-dark")">
                                @(seller.IsProcessed ? "Опрацьований" : "Очікує")
                            </span>
                        </div>
                        <div class="col-2">
                            @seller.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")
                        </div>
                        <div class="col-2">
                            <div class="d-flex gap-2">
                                <a href="/SellerRequest/Edit/@seller.Id"
                                   class="btn btn-sm btn-link text-primary"
                                   title="Редагувати заявку">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-link text-info btn-view-seller-request"
                                        title="Переглянути інформацію"
                                        data-id="@seller.Id">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">Немає жодного продавця.</p>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="sellerInfoModal" tabindex="-1" aria-labelledby="sellerInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="sellerInfoModalLabel">Інформація про магазин</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
            </div>
            <div class="modal-body">
                <div id="sellerInfoContent">
                    <p class="text-muted">Завантаження...</p>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const modalEl = document.getElementById("sellerInfoModal");
            const contentDiv = document.getElementById("sellerInfoContent");
            const sellerModal = new bootstrap.Modal(modalEl);

            document.querySelectorAll(".btn-view-seller-request").forEach(button => {
                button.addEventListener("click", async () => {
                    const sellerId = button.getAttribute("data-id");
                    contentDiv.innerHTML = "<p class='text-muted'>Завантаження...</p>";

                    try {
                        const response = await fetch(`/SellerRequest/GetSellerRequestInfoPartial/${sellerId}`);
                        const html = await response.text();
                        contentDiv.innerHTML = html;

                        // Показуємо модальне
                        sellerModal.show();

                        // ініціалізуємо дії кнопок у новому partial
                        initModalButtons();
                    } catch {
                        contentDiv.innerHTML = `<p class="text-danger">Помилка завантаження інформації продавця.</p>`;
                    }
                });
            });

            function initModalButtons() {
                const approveBtn = document.querySelector(".btn-approve");
                const rejectForm = document.querySelector("#rejectForm");
                const rejectModalEl = document.querySelector("#rejectModal");

                // ✅ Схвалення
                if (approveBtn) {
                    approveBtn.addEventListener("click", async () => {
                        const id = approveBtn.getAttribute("data-id");
                        const payload = {
                            Id: parseInt(id),
                            IsApproved: true,
                            RefusalReason: null
                        };
                        await processRequest(payload);
                    });
                }

                // ✅ Відхилення
                if (rejectForm) {
                    rejectForm.addEventListener("submit", async (e) => {
                        e.preventDefault();
                        const id = document.getElementById("rejectId").value;
                        const reason = document.getElementById("refusalReason").value;

                        const payload = {
                            Id: parseInt(id),
                            IsApproved: false,
                            RefusalReason: reason
                        };

                        await processRequest(payload);

                        const rejectModalInstance = bootstrap.Modal.getInstance(rejectModalEl);
                        if (rejectModalInstance) rejectModalInstance.hide();
                    });
                }

                // ID для модального вікна
                if (rejectModalEl) {
                    rejectModalEl.addEventListener("show.bs.modal", e => {
                        const button = e.relatedTarget;
                        const id = button?.getAttribute("data-id");
                        if (id) document.getElementById("rejectId").value = id;
                    });
                }
            }

            async function processRequest(data) {
                try {
                    const res = await fetch("/SellerRequest/Approve", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(data)
                    });

                    if (res.ok) {
                        const updatedPartial = await fetch(`/SellerRequest/GetSellerRequestInfoPartial/${data.Id}`);
                        const html = await updatedPartial.text();
                        document.getElementById("sellerInfoContent").innerHTML = html;

                        // 🔁 знову ініціалізуємо кнопки після оновлення
                        initModalButtons();
                    } else {
                        alert("Помилка при обробці заявки.");
                    }
                } catch (error) {
                    alert("Щось пішло не так.");
                    console.error(error);
                }
            }
        });
    </script>
}
