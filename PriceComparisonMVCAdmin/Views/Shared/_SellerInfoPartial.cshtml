@model AdminSellerInfoPartialViewModel

<div>
    <p><strong>Назва магазину:</strong> @Model.Seller.StoreName</p>
    <p><strong>Вебсайт:</strong> <a href="@Model.Seller.WebsiteUrl" target="_blank">@Model.Seller.WebsiteUrl</a></p>
    <p><strong>Активний:</strong> @(Model.Seller.IsActive ? "Так" : "Ні")</p>
    <p><strong>Баланс:</strong> @Model.Seller.AccountBalance грн</p>
    <p><strong>Публікує прайс-лист:</strong> @(Model.Seller.PublishPriceList ? "Так" : "Ні")</p>

    <div class="mt-3">
        <img src="@Model.Seller.LogoImageUrl" alt="Логотип" class="img-thumbnail" style="max-width: 200px;" />
    </div>


    @if (Model.ClickStatistics?.Any() == true)
    {
        <hr />
        <h5 class="mt-3">Статистика за останній місяць</h5>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Назва продукту</th>
                    <th>Категорія</th>
                    <th>Дата/час</th>
                    <th>Сума</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ClickStatistics)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.CategoryName</td>
                        <td>@item.ClickedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.ClickRate</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted mt-3">Немає кліків за останній місяць.</p>
    }
</div>
