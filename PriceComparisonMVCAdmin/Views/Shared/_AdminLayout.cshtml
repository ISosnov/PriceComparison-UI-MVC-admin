<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PriceComparisonMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="@Url.Content("~/css/seller-style.css")" />
</head>
<body>
    <header class="row align-items-center custom-header text-white py-2 px-3">
        <div class="col-md-2 text-center">
            <h1 class="m-0 fs-5">LOGO</h1>
        </div>

        @if (ViewBag.Seller != null)
        {
            var sellerModel = (PriceComparisonMVCAdmin.Models.Response.Seller.SellerResponseModel)ViewBag.Seller;
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="d-flex align-items-center gap-3">
                    <img src="@sellerModel.LogoImageUrl"
                         alt="Store Logo"
                         class="img-fluid"
                         style="max-height: 40px;" />
                    <div>
                        <div class="fw-bold">@sellerModel.StoreName</div>
                        <div>
                            <a href="@sellerModel.WebsiteUrl" target="_blank" class="text-white text-decoration-underline">
                                @sellerModel.WebsiteUrl
                            </a>
                        </div>
                        <div>
                            <small>Баланс: @sellerModel.AccoundBalance.ToString("C")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-6"></div>
        }
        <div class="col-md-4 d-flex align-items-center justify-content-end">
            <img src="@Url.Content("~/images/user-icon.png")"
                 alt="Користувач"
                 class="rounded-circle me-2"
                 width="32"
                 height="32" />

            @if (!string.IsNullOrEmpty(ViewBag.Username))
            {
                <span class="me-2">@ViewBag.Username</span>
                <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link text-white text-decoration-none p-0">(Вийти)</button>
                </form>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="text-white text-decoration-none">
                    Кабінет
                </a>
            }
        </div>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Ліва колонка (меню) -->
            <nav class="col-md-2 col-lg-2 d-md-block bg-light sidebar vh-100 border-end">
                <div class="p-3">
                    <h4 class="mb-4">Адмін-панель</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a asp-controller="Seller" asp-action="Index" class="nav-link">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Seller" asp-action="UploadPrice" class="nav-link">Завантаження прайсу</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Мої товари</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Seller" asp-action="Statistics" class="nav-link">Статистика</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Seller" asp-action="Settings" class="nav-link">Налаштування</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Права колонка (основний контент) -->
            <main class="col-md-10 col-lg-10 ms-sm-auto px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
